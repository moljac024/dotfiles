{
  "layer": "top",
  "modules-left": ["sway/workspaces", "sway/mode"],
  "modules-center": [],
  "modules-right": [
    "cpu",
    "memory",
    "tray",
    "network",
    "backlight",
    "battery",
    "pulseaudio",
    "idle_inhibitor",
    "clock",
    "custom/power"
  ],
  "network": {
    "format": "{ifname} {ipaddr}",
    "format-wifi": "📶 {essid} ({signalStrength}%) {ipaddr}",
    "format-ethernet": "🖥️ {ipaddr}",
    "format-disconnected": "{ifname} offline", // An empty format will hide the module.
    "on-click": "swaymsg exec '$term -e nmtui-connect'",
    "on-click-right": "swaymsg exec '$term -e nmtui-edit'",
    "max-length": 50
  },
  "backlight": {
    "interval": 2,
    "format": "💡 {percent}%",
    "on-scroll-up": "brightness-increase",
    "on-scroll-down": "brightness-decrease"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "☕",
      "deactivated": "😴"
    }
  },
  "cpu": {
    "interval": 5,
    "format": "CPU: {usage}%"
  },
  "memory": {
    "interval": 5,
    "format": "MEM: {percentage}%"
  },
  "battery": {
    "format": "🔋 {capacity}%",
    "format-charging": "🔌 {capacity}%"
  },
  "pulseaudio": {
    "format": "🔉 {volume}%",
    "format-bluetooth": "🎧 {volume}%",
    "format-muted": "🔇 {volume}%",
    "on-click": "pavucontrol",
    "on-click-right": "sound-volume-toggle-mute",
    "on-scroll-up": "sound-volume-increase",
    "on-scroll-down": "sound-volume-decrease"
  },
  "tray": {
    "icon-size": 20,
    "spacing": 4
  },
  "clock": {
    "format-alt": "{:%a, %d. %b  %H:%M}"
  },
  "custom/power": {
    "format": "⏻",
    "on-click": "sway-power-menu"
  }
}
