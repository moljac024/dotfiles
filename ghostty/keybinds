# Toggle fullscreen
keybind = ctrl+shift+f=toggle_fullscreen
keybind = f11=toggle_fullscreen

# Clear screen
keybind = ctrl+shift+l=clear_screen

# Navigating tabs
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+l=next_tab

# Scrolling
keybind = ctrl+shift+j=scroll_page_down
keybind = ctrl+shift+k=scroll_page_up

# Navigating splits
keybind = ctrl+s>h=goto_split:left
keybind = ctrl+s>j=goto_split:down
keybind = ctrl+s>k=goto_split:up
keybind = ctrl+s>l=goto_split:right

# Zoom/unzoom split
keybind = ctrl+s>z=toggle_split_zoom
