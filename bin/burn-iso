#!/usr/bin/env bash

set -euo pipefail

# Must be root
if [[ $EUID -ne 0 ]]; then
  echo "âŒ Please run as root or with sudo."
  exit 1
fi

# Show removable drives
echo "ğŸ” Available removable drives:"
lsblk -dpo NAME,SIZE,MODEL,TRAN | grep -Ei 'usb|removable' || echo "âš ï¸ No USB drives detected."

read -rep "ğŸ‘‰ Enter target device (e.g. /dev/sdX): " target
if [[ ! -b "$target" ]]; then
  echo "âŒ '$target' is not a valid block device."
  exit 1
fi

# Confirm action
echo "âš ï¸ You are about to ERASE all data on '$target'."
read -rp "Type 'YES' to continue: " confirm
if [[ "$confirm" != "YES" ]]; then
  echo "âŒ Aborted."
  exit 1
fi

read -rep "ğŸ’¿ Enter path to ISO file: " iso_raw
iso="${iso_raw/#\~/$HOME}"  # expand ~ manually

if [[ ! -f "$iso" ]]; then
  echo "âŒ ISO file not found: $iso"
  exit 1
fi

echo "ğŸš€ Writing '$iso' to '$target'..."
dd if="$iso" of="$target" bs=4M status=progress conv=fsync

echo "ğŸ§¼ Flushing buffers with sync..."
sync

echo "â³ Waiting for device to finish all I/O..."
udevadm settle

# Optional safe eject if available
if command -v udisksctl &>/dev/null; then
  echo "ğŸ”Œ Powering off USB device for safe removal..."
  udisksctl power-off -b "$target" || echo "âš ï¸ Failed to power off. You may remove it manually."
  echo "âœ… Device powered off safely."
else
  echo "â„¹ï¸ udisksctl not found. Skipping auto eject."
  echo "âœ… It is now safe to remove '$target'."
fi
